    },
    "error": {
      "no_device_found": "[%key:common::config_flow::error::cannot_connect%]"
    },
    "flow_title": "{name}",
    "step": {
      "discovery_confirm": {
        "description": "Do you want to start setup {model}?"
      },
      "user": {
