      "humidity": {
        "name": "{sensor_name} humidity"
      },
      "noise_avg": {
        "name": "Average noise"
      },
      "noise_max": {
        "name": "Maximum noise"
      },
      "pressure": {
        "name": "{sensor_name} pressure"
      },
      "radiation": {
        "name": "Radiation level"
      },
      "temperature": {
        "name": "{sensor_name} temperature"
      }
    }
