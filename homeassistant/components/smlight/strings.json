        },
        "description": "Please enter the correct username and password",
        "title": "[%key:common::config_flow::title::reauth%]"
      },
      "user": {
        "data": {
          "host": "[%key:common::config_flow::data::host%]"
        },
        "data_description": {
          "host": "The hostname or IP address of the SMLIGHT SLZB-06x device"
