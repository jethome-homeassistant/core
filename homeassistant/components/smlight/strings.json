        "data_description": {
          "password": "Password for the device's web login.",
          "username": "Username for the device's web login."
        },
        "description": "Please enter the username and password"
      },
      "confirm_discovery": {
        "description": "Do you want to set up SMLIGHT at {host}?"
      },
